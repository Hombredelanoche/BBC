{% extends "base.html.twig" %}

{% block title %}
        {{parent()}} Planning
{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href=" {{asset('css/calendar.css')}} ">
{% endblock %}

{% block body %}
        <div class="block">

                {% if is_granted('ROLE_ADMIN') %}
                <ul>
                <li><button class='classic-btn'><a href=" {{path('app_calendar_index')}} ">Cr√©e un camp</a></button></li>
                </ul>
                {% endif %}

                <div id="calendrier">           
                </div>

        </div>
{% endblock %}

{% block script %}
<script>
window.onload = () => {
    let calendarElt = document.querySelector('#calendrier');

    let calendar = new FullCalendar.Calendar(calendarElt, {
        initialView: 'dayGridMonth',
        selectable: true,
        locale: 'fr',
        timeZone: 'Europe/Paris',
        editable: true,
        headerToolbar : {
            start : 'prev,next today',
            center :'title',
            end : 'dayGridMonth,timeGridWeek'
        }, 
        contentHeight: 650,
        events: {{data|raw}}
    });
    calendar.render();
}
</script>
{% endblock %}