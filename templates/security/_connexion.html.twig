{% extends "base.html.twig" %}


{% block title %}| Connexion{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href=" {{asset('css/enregistrement&connexion')}} ">
{% endblock %}


{% block body %}

{% if error %}
    <div> {{error.messageKey|trans(error.messageData, 'security')}} </div>
{% endif %}


<form action=" {{path('connexion_')}} " method='POST'>
<div>
<label for="email">Email</label>
<input type="text" id='email' name='_username' value=' {{username}} '>
</div>

<div>
<label for="password">Mot de passe</label>
<input type="password" id='password' name='_password'>
</div>
<div>
<label>
    <input type="checkbox" name="_remember_me"> Se souvenir de moi.
</label>
<div>
<input type="hidden" nom='_csrf_token' value=' {{csrf_token('authenticate')}} '>
</div>
</div>
<button>Connexion</button>
</form>

{% endblock %}